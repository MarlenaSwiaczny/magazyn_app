generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  name          String?
  password      String
  createdAt     DateTime      @default(now())
  avatarUrl     String?
  role          String        @default("user")
  userWarehouse String?
  consumed      Archive[]
  cartItems     CartItem[]
  stockLogs     StockChange[]
  transfers     Transfer[]
}

model Warehouse {
  id          Int           @id @default(autoincrement())
  name        String
  consumed    Archive[]
  cartItems   CartItem[]
  stocks      Stock[]
  stockChange StockChange[]
  outgoing    Transfer[]    @relation("FromWarehouse")
  incoming    Transfer[]    @relation("ToWarehouse")
}

model Product {
  id          Int           @id @default(autoincrement())
  type        String
  typeId      Int?
  typeRel     Type?         @relation(fields: [typeId], references: [id])
  name        String
  size        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  imageUrl    String?
  imageThumb  String?
  consumed    Archive[]
  cartItems   CartItem[]
  stocks      Stock[]
  stockChange StockChange[]
  transfers   Transfer[]

  @@unique([name, size, type])
  @@unique([name, size, typeId])
}

model Type {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  products Product[]
}

model Stock {
  id          Int       @id @default(autoincrement())
  warehouseId Int
  productId   Int
  quantity    Int
  updatedAt   DateTime  @updatedAt
  product     Product   @relation(fields: [productId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
}

model StockChange {
  id          Int       @id @default(autoincrement())
  type        String
  quantity    Int
  createdAt   DateTime  @default(now())
  productId   Int
  warehouseId Int
  userId      Int
  product     Product   @relation(fields: [productId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
}

model Transfer {
  id              Int       @id @default(autoincrement())
  productId       Int
  fromWarehouseId Int
  toWarehouseId   Int
  quantity        Int
  userId          Int
  transferredAt   DateTime  @default(now())
  note            String?
  fromWarehouse   Warehouse @relation("FromWarehouse", fields: [fromWarehouseId], references: [id])
  product         Product   @relation(fields: [productId], references: [id])
  toWarehouse     Warehouse @relation("ToWarehouse", fields: [toWarehouseId], references: [id])
  user            User      @relation(fields: [userId], references: [id])
}

model CartItem {
  id          Int       @id @default(autoincrement())
  userId      Int
  productId   Int
  warehouseId Int
  quantity    Int
  addedAt     DateTime  @default(now())
  product     Product   @relation(fields: [productId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
}

model Archive {
  id          Int       @id @default(autoincrement())
  productId   Int
  warehouseId Int
  quantity    Int
  userId      Int
  usedAt      DateTime  @default(now())
  note        String?
  product     Product   @relation(fields: [productId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
}
